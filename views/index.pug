doctype html
html
    head
        title Passport
    body
    if !showForms
        h1 Login
        form(action="/login", method="post")
            input(type="text" name="login")
            input(type="text" name="password")
            input(type="submit")

        h1 Register
        form(action="/register", method="post")
            input(type="text" name="login")
            input(type="text" name="password")
            input(type="submit")
    else
            a(href="/logout") Logout
            ul
            each user in users
                    li= user.login + ' - ' +user.password